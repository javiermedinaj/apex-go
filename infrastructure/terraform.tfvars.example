
# AWS Configuration
aws_region  = "us-east-1"
environment = "demo"

# EC2 Configuration
instance_type = "t3.micro"  # Free Tier eligible

# SSH Key - IMPORTANTE: Debes crear esta key en AWS Console primero
# AWS Console > EC2 > Key Pairs > Create key pair
key_name = "forgeai-demo-key"

# Salesforce Configuration
# Formato: https://orgfarm-xxxx-dev-ed.develop.my.salesforce.com
salesforce_instance_url = "https://your-instance.my.salesforce.com"

# Access Token de Salesforce
salesforce_access_token = "your-salesforce-access-token"
