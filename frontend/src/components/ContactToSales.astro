<section id="contact" class="py-24 px-4 bg-white">
  <div class="max-w-7xl mx-auto">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      
      <div class="space-y-6">
        <div class="inline-flex items-center space-x-2 bg-gray-100 border border-gray-200 rounded-full px-4 py-2">
          <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
          <span class="text-sm text-gray-700">Limited Early Access Available</span>
        </div>

        <h2 class="text-4xl md:text-5xl font-semibold text-gray-900">
          Ready to <span class="text-gray-900">transform</span> your recruiting workflow?
        </h2>

        <p class="text-gray-600 text-lg">
          Join leading HR teams who are already hiring faster with TalentAI.
          Get early access to our autonomous recruiting platform.
        </p>


        <div class="space-y-4 pt-4">
          <div class="flex items-start space-x-3">
            <svg class="w-6 h-6 text-gray-900 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <div>
              <p class="text-gray-900 font-semibold">Priority Onboarding</p>
              <p class="text-gray-600 text-sm">Dedicated support team for seamless integration</p>
            </div>
          </div>

          <div class="flex items-start space-x-3">
            <svg class="w-6 h-6 text-gray-900 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <div>
              <p class="text-gray-900 font-semibold">Custom Enterprise Solutions</p>
              <p class="text-gray-600 text-sm">Tailored workflows for your HR needs</p>
            </div>
          </div>

          <div class="flex items-start space-x-3">
            <svg class="w-6 h-6 text-gray-900 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <div>
              <p class="text-gray-900 font-semibold">VIP Direct Line</p>
              <p class="text-gray-600 text-sm">Connect with our recruiting leadership team</p>
            </div>
          </div>
        </div>

        <div class="flex items-center space-x-6 pt-6 border-t border-gray-200">
          <div class="text-center">
            <p class="text-2xl font-bold text-gray-900">500+</p>
            <p class="text-xs text-gray-500">Teams Onboarded</p>
          </div>
          <div class="text-center">
            <p class="text-2xl font-bold text-gray-900">10K+</p>
            <p class="text-xs text-gray-500">Hires Made</p>
          </div>
          <div class="text-center">
            <p class="text-2xl font-bold text-gray-900">99.9%</p>
            <p class="text-xs text-gray-500">Match Rate</p>
          </div>
        </div>
      </div>

      <div class="bg-white border-2 border-gray-200 rounded-lg shadow-xl p-8 lg:p-10">
        <h3 class="text-2xl font-bold text-gray-900 mb-2">Contact Sales</h3>
        <p class="text-gray-600 mb-8">Fill out the form and our team will reach out within 24 hours.</p>
        
        <form id="leadForm" class="space-y-6">
          <div>
            <label for="fullName" class="block text-sm font-medium text-gray-700 mb-2">
              Full Name <span class="text-red-500">*</span>
            </label>
            <input 
              type="text" 
              id="fullName" 
              name="fullName"
              class="w-full bg-white border-2 border-gray-300 rounded-md px-4 py-3 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all" 
              placeholder="John Doe" 
              required 
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
              Corporate Email <span class="text-red-500">*</span>
            </label>
            <input 
              type="email" 
              id="email" 
              name="email"
              class="w-full bg-white border-2 border-gray-300 rounded-md px-4 py-3 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all" 
              placeholder="john@company.com" 
              required 
            />
          </div>

          <div>
            <label for="company" class="block text-sm font-medium text-gray-700 mb-2">
              Company <span class="text-red-500">*</span>
            </label>
            <input 
              type="text" 
              id="company" 
              name="company"
              class="w-full bg-white border-2 border-gray-300 rounded-md px-4 py-3 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all" 
              placeholder="Acme Corporation" 
              required 
            />
          </div>

          <div>
            <label for="teamSize" class="block text-sm font-medium text-gray-700 mb-2">
              Team Size
            </label>
            <select 
              id="teamSize" 
              name="teamSize"
              class="w-full bg-white border-2 border-gray-300 rounded-md px-4 py-3 text-gray-900 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all"
            >
              <option value="">Select team size</option>
              <option value="1-10">1-10 employees</option>
              <option value="11-50">11-50 employees</option>
              <option value="51-200">51-200 employees</option>
              <option value="200+">200+ employees</option>
            </select>
          </div>

          <button 
            type="submit" 
            class="w-full bg-black hover:bg-gray-800 text-white font-bold py-4 px-6 rounded-md transition-all duration-200"
          >
            <span id="btnText">Request Enterprise Demo</span>
          </button>

          <div id="statusMsg" class="text-center text-sm font-medium hidden"></div>
        </form>

        <p class="text-xs text-gray-500 mt-6 text-center">
          By submitting this form, you agree to our 
          <a href="#" class="text-gray-900 hover:text-gray-700 underline">Privacy Policy</a> and 
          <a href="#" class="text-gray-900 hover:text-gray-700 underline">Terms of Service</a>.
        </p>
      </div>

    </div>
  </div>
</section>

<script>
  const form = document.getElementById('leadForm') as HTMLFormElement;
  const statusMsg = document.getElementById('statusMsg') as HTMLElement;
  const btnText = document.getElementById('btnText') as HTMLElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    btnText.innerText = "Processing...";
    
    const formData = new FormData(form);
    const data = {
      fullName: formData.get('fullName') as string,
      email: formData.get('email') as string,
      company: formData.get('company') as string,
    };

    try {
      const res = await fetch('http://localhost:8080/api/submit', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data)
      });

      if (res.ok) {
        statusMsg.innerText = "Our team will contact you within 24 hours.";
        statusMsg.className = "text-center text-sm font-medium text-green-600 block mt-4";
        form.reset();
      } else {
        throw new Error('Server error');
      }
    } catch (err) {
      statusMsg.innerText = "Connection error. Please try again or contact support.";
      statusMsg.className = "text-center text-sm font-medium text-red-600 block mt-4";
    }
    
    btnText.innerText = "Request Enterprise Demo";
  });
</script>
