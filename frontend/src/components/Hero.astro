---
import { FaReddit, FaInstagram, FaAws, FaDocker, FaNode } from 'react-icons/fa';
import { SiSalesforce } from 'react-icons/si';
---

<section class="relative pt-32 pb-20 px-4 overflow-hidden bg-white">
  <div class="max-w-7xl mx-auto">
    <div class="text-center space-y-6 mb-16">
      <!-- Badge -->
      <div class="inline-flex items-center space-x-2 bg-gray-100 border border-gray-200 rounded-full px-4 py-2">
        <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
        <span class="text-sm text-gray-700">NEW v2.0.1 — NEW MAGIC → <span class="text-black font-semibold">BUILD 24/7</span></span>
      </div>

      <!-- Main Heading -->
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-semibold tracking-tight">
        <span class="block text-gray-900">Autonomous Software Recruiting</span>
        <span class="block text-gray-900 mt-2">
          Built for Real-World Production
        </span>
      </h1>

      <!-- Description -->
      <p class="text-gray-600 text-lg md:text-xl max-w-3xl mx-auto leading-relaxed">
        The first engineering automation that sources candidates you'd trust
        hiring out of the box. Ship code from idea to prod with end-to-end testing like
        interviews, migrations, debugging, and incident response without
        breaking anything you have. Tools in workflow.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-4">
        <a href="#contact" class="bg-gray-900 hover:bg-gray-800 text-white font-semibold px-8 py-4 rounded-md transition-all duration-200">
          Get Started
        </a>
        <a href="#contact" class="text-gray-700 hover:text-gray-900 font-medium px-8 py-4 transition-colors">
          Contact Sales →
        </a>
      </div>
    </div>

    <!-- Code Preview Demo -->
    <div class="relative max-w-5xl mx-auto">
      <div class="bg-white border-2 border-gray-200 rounded-lg overflow-hidden shadow-xl">
        <!-- Header -->
        <div class="bg-gray-50 border-b border-gray-200 px-6 py-3 flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <div class="flex space-x-1.5">
              <div class="w-3 h-3 rounded-full bg-red-400"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
              <div class="w-3 h-3 rounded-full bg-green-400"></div>
            </div>
            <span class="text-sm text-gray-600 font-medium">Recommended Candidates</span>
          </div>
          <span class="text-xs text-gray-500">47 matches found</span>
        </div>
        
        <!-- Table Content -->
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Candidate</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Role</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Match Score</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="shrink-0 h-10 w-10 bg-linear-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold">
                      JS
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-semibold text-gray-900">John Smith</div>
                      <div class="text-xs text-gray-500">john.smith@email.com</div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">Senior Full Stack</div>
                  <div class="text-xs text-gray-500">5 years exp</div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="w-16 bg-gray-200 rounded-full h-2 mr-2">
                      <div class="bg-green-500 h-2 rounded-full" style="width: 95%"></div>
                    </div>
                    <span class="text-sm font-semibold text-gray-900">95%</span>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                    Interview Scheduled
                  </span>
                </td>
              </tr>
              
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="shrink-0 h-10 w-10 bg-linear-to-br from-pink-500 to-orange-500 rounded-full flex items-center justify-center text-white font-semibold">
                      MJ
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-semibold text-gray-900">Maria Johnson</div>
                      <div class="text-xs text-gray-500">maria.j@email.com</div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">DevOps Engineer</div>
                  <div class="text-xs text-gray-500">7 years exp</div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="w-16 bg-gray-200 rounded-full h-2 mr-2">
                      <div class="bg-green-500 h-2 rounded-full" style="width: 92%"></div>
                    </div>
                    <span class="text-sm font-semibold text-gray-900">92%</span>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                    In Review
                  </span>
                </td>
              </tr>

              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="shrink-0 h-10 w-10 bg-linear-to-br from-cyan-500 to-blue-500 rounded-full flex items-center justify-center text-white font-semibold">
                      AK
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-semibold text-gray-900">Alex Kim</div>
                      <div class="text-xs text-gray-500">alex.kim@email.com</div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">Product Designer</div>
                  <div class="text-xs text-gray-500">4 years exp</div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="w-16 bg-gray-200 rounded-full h-2 mr-2">
                      <div class="bg-yellow-500 h-2 rounded-full" style="width: 88%"></div>
                    </div>
                    <span class="text-sm font-semibold text-gray-900">88%</span>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                    Screening
                  </span>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Terminal Output -->
      <div class="mt-4 bg-gray-50 border border-gray-200 rounded-lg p-4">
        <div class="flex items-center space-x-2 text-sm">
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-gray-700 font-mono text-xs">talentai recruit --auto</span>
          </div>
          <span class="text-gray-400">|</span>
          <span class="text-gray-600 text-xs">Recruitment campaign successful</span>
        </div>
      </div>
    </div>

    <!-- Trusted By Section -->
    <div class="mt-24 text-center">
      <p class="text-gray-500 text-sm uppercase tracking-wider mb-8">Trusted by engineering teams at</p>
      <div class="flex flex-wrap items-center justify-center gap-8 md:gap-16 max-w-5xl mx-auto px-4">
        <!-- Reddit -->
        <div class="flex items-center justify-center opacity-60 hover:opacity-100 transition-opacity">
          <FaReddit size={64} color="#374151" client:load />
        </div>

        <!-- Salesforce -->
        <div class="flex items-center justify-center opacity-60 hover:opacity-100 transition-opacity">
          <SiSalesforce size={64} color="#374151" client:load />
        </div>

        <!-- Instagram -->
        <div class="flex items-center justify-center opacity-60 hover:opacity-100 transition-opacity">
          <FaInstagram size={64} color="#374151" client:load />
        </div>

        <!-- AWS -->
        <div class="flex items-center justify-center opacity-60 hover:opacity-100 transition-opacity">
          <FaAws size={64} color="#374151" client:load />
        </div>

        <!-- Docker -->
        <div class="flex items-center justify-center opacity-60 hover:opacity-100 transition-opacity">
          <FaDocker size={64} color="#374151" client:load />
        </div>

        <!-- Node.js -->
        <div class="flex items-center justify-center opacity-60 hover:opacity-100 transition-opacity">
          <FaNode size={64} color="#374151" client:load />
        </div>
      </div>
    </div>
  </div>
</section>
